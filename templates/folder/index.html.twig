{% extends 'base.html.twig' %} {% block title %}Gestionnaire de fichiers{%
endblock %} {% block body %}
<div class="m-5">
    <div class="m-5">
        <h1 class="text-center">{{ block("title") }}</h1>
    </div>
    <div class="border d-flex align-items-center p-2">
        <a
            {%
            if
            currentFolder.parent
            %}
            href="{{
                path('app_folder_show', { id: currentFolder.parent.id })
            }}"
            {%
            endif
            %}
        >
            <i class="btn bi bi-arrow-left-circle"></i>
        </a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for folder in folders %}
            <tr>
                <td>
                    <a
                        href="{{ path('app_folder_show', { id: folder.id }) }}"
                        class="text-black text-decoration-none"
                    >
                        <strong
                            ><i class="bi bi-folder text-warning"></i>
                            {{ folder.name }}</strong
                        >
                    </a>
                </td>
                <td class="d-flex align-items-center gap-2">
                    <button
                        data-bs-toggle="modal"
                        data-bs-target="#updateFolderModal"
                        class="btn btn-primary btn-sm"
                    >
                        <i class="bi bi-pencil"></i>
                    </a>
                    {% include 'folder/delete.html.twig' with { folder: folder }
                    %}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="2" class="text-muted">Aucun fichier</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <button
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#createFolderModal"
    >
        Cr√©er un dossier
    </button>
</div>

{% include 'folder/create.html.twig' %} {% include 'folder/update.html.twig' %}
{% endblock %}
