{% extends 'base.html.twig' %}

{% block title %}Gestionnaire de fichier
{% endblock %}

{% block body %}
	<div class="mb-3 p-3 border">
		{% for item in pathElements %}
			{% if not loop.last %}
				<a href="{{ path('app_folder_show', {'id': item.id}) }}">{{ item.name }}</a>
				/
			{% else %}
				{{ item.name }}
			{% endif %}
		{% endfor %}
	</div>

	<table class="table table-striped">
		<thead>
			<tr class="text-center">
				<th scope="col">Nom</th>
				<th scope="col">Date de cr√©ation</th>
				<th scope="col">Date de modification</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for child in children %}
				<tr>
					<td>
						<div class="d-flex flex-row justify-content-around">
							<i class="bi bi-folder-fill text-warning"></i>
							<a href="{{ path('app_folder_show', {'id': child.id}) }}">{{ child.name }}</a>
						</div>
					</td>
					<td>{{ child.createdAt|date('d/m/Y H:i') }}</td>
					<td>{{ child.updatedAt|date('d/m/Y H:i') }}</td>
					<td class="d-flex flex-row">
						{% include "folder/update.html.twig" %}
						{% include "folder/delete.html.twig" %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{% include "folder/create.html.twig" %}
{% endblock %}
